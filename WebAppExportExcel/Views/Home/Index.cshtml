@{
    ViewData["Title"] = "WebApp Excel";
}
@model FileViewModel
<div class="row">
    <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
        <div class="card border-0 shadow rounded-3 my-5">
            <div class="card-body p-4 p-sm-5">
                <h5 class="card-title text-center mb-5 fw-light fs-5">Xuất file excel</h5>
                @using (Html.BeginForm("ExportExcel", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                     <div class="form-group">
                        <label class="text-danger">Tên file không dấu và không khoản trắng</label>
                    </div>
                    <div class="form-group">
                        @Html.ValidationMessage("InvalidAuth", new { @class = "text-danger" })
                    </div>
                    @Html.LabelFor(x => x.filetick)
                    <div class="form-floating mb-3">

                        @Html.TextBox("filetick", "",new {@class="form-control file1", type="file",name="filetick"} )
                    </div>
                    @Html.LabelFor(x => x.filecong)
                    <div class="form-floating mb-3">
                        @Html.TextBox("filecong", "",new {@class="form-control filecong", type="file", name="filecong"} )

                    </div>

                    <div class="d-grid">
                        <button class="btn btn-primary btn-login text-uppercase fw-bold" type="submit">
                            Xuất file
                        </button>
                    </div>

                }
                <hr>
                <label>Xuất file xong thì click vào nút này</label>
                <div class="d-grid">
                    <a href="/Home/Clean" class="btn btn-primary btn-login text-uppercase fw-bold" type="button">
                        Xóa file trên server
                        </a>
                    
                </div>
            </div>
        </div>
    </div>
</div>
